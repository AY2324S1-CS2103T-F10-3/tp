<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="39" GridPane.columnIndex="0">
            <HBox alignment="CENTER_LEFT" spacing="16">
                <padding>
                    <Insets top="4" right="8" bottom="4" left="8" />
                </padding>
                <Label fx:id="name" alignment="CENTER_LEFT" minWidth="296" styleClass="cell_small_label" text="\$first" />
                <Label fx:id="id" alignment="CENTER_RIGHT" minWidth="70" styleClass="cell_small_label" text="\$id" textAlignment="RIGHT" />
            </HBox>
            <Label fx:id="ingredient" text="\$second" styleClass="cell_small_label" />
        </VBox>
    </GridPane>
</HBox>
